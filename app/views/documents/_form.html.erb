<%= form_for @document, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :descriptif, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :descriptif, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :date, :class => 'control-label' %>
    <div class="controls">
      <%= f.date_select :date, :class => 'date_select' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :url, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :url, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :position_type, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :position_type, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :position_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :position_id, :class => 'number_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                documents_path, :class => 'btn' %>
  </div>
<% end %>
