<%- model_class = @position.class -%>
<h1><%=t '.title', :default => model_class.model_name.human %></h1>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @position.description %></dd>
  <dt><strong><%= model_class.human_attribute_name(:type) %>:</strong></dt>
  <dd><%= @position.type %></dd>
  <dt><strong><%= model_class.human_attribute_name(:emplacement_type) %>:</strong></dt>
  <dd><%= @position.emplacement_type %></dd>
  <dt><strong><%= model_class.human_attribute_name(:emplacement_id) %>:</strong></dt>
  <dd><%= @position.emplacement_id %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              positions_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_position_path(@position), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              position_path(@position),
              :method => 'delete',
              :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
              :class => 'btn btn-danger' %>
</div>
